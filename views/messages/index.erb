<%
  human = locals[:human]
  raise ArgumentError, 'No human provided' unless human.is_a?(Human)
%>

<!DOCTYPE html>
<html ng-app='messages'>
    <head>
        <title>Daily Lager</title>
        <!--
            <link href="reset.css" rel="stylesheet" type="text/css">
        -->
        <link href="messages.css" rel="stylesheet" type="text/css">
    </head>
    <body ng-controller='MessageCtrl' ng-init="data.secret='<%=human.secret%>'">
        <div id='history-holder'>
            <div id='history' >
                <div ng-repeat='item in data.savedHistory'>
                    <div ng-class='item.klass'>{{ item.text }}</div>
                </div>
            </div>
          </div>
        <form ng-submit='data.postMessage()'>
            <input id='play-box' autocomplete='off' ng-model='data.newMessage' auto-focus />
            <input type='submit' value='Send' >
        </form>

        <div id='footer'>
            <script src="angular-1.3.0-beta.17.js" type="text/javascript"></script>
            <script src="messages.js" type="text/javascript"></script>
        </div>
    </body>
</html>
